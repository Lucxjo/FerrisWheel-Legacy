<resources>

    <!-- Base application theme. -->
    <style name="MainTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">#7ef9ff</item>
        <item name="android:navigationBarColor">@color/gradStop</item>
        <item name="android:fontFamily">@font/raleway</item>

    </style>

    <style name="ViewTheme" parent="MainTheme">
        <item name="android:textColorPrimary">@color/textColorPrim</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryIn</item>
        <item name="android:textColorSecondary">@color/textColorSec</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecIn</item>
        <item name="android:textColorHint">@color/textColorSec</item>
    </style>

</resources>
